<Window x:Class="Asteroids.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asteroids"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800" Background="Black">
    <Window.DataContext>
        <local:AsteroidViewModel />
    </Window.DataContext>
    <Canvas>
        <Button
               DataContext="{Binding rock}"
                Command="{Binding ChangeValue}"
               Height="{Binding RoidHeight}"
               Canvas.Left="{Binding XCoordinate}"
               Canvas.Top="{Binding YCoordinate}" >
               <Image Source = "Asteroid.png"/>
               </Button>
    </Canvas>
</Window>
